.search_box{
  display: flex;
  align-items: center;
  background: 	#FFEFDB;
  height: 40px;
  line-height: 40px;
  margin-bottom: 10px;
}
.search_box input{
  width: 87%;
  background: #FFEC8B;
}
.search_btn{
  font-size: 14px;
  border-radius: 10px;
  width: 13%;
  text-align: center;
}
.chunk{
  margin:10px;
  border-bottom: 1px solid #ccc;
}

.userMsg{
  display: flex;
  align-items: center;
}
.header_name{
  padding-left: 10px;
}
.header_img{
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.content_box{
  font-size: 18px;
  padding: 5px;
}
.list_top_box{
  font-size: 16px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.change_btn_box{
  display: flex;
}
.change_btn_box>view:first-child{
  margin-right: 10px;
}
.change_btn{ 
  color:#ccc;
  font-size:14px;
}
.mask{
 width:100%;
  height:100%;
  background:#000;
  opacity:.5;
  position:absolute;
  top:0;
  z-index:1000;
}
.content_pop{
  width:300px;
  height:200px;
  background:#fff;
  position:absolute;
  top:34%;
  z-index:1000;
  border: 10px solid #FFA500;
  left:12%;
}
.pop_btn_box{
  display:flex;
  justify-content:space-between;
  height:50px;
  line-height:50px;
  text-align:center;
  border-top: 3px solid#EEDC82;
}
.pop_btn_box >view{
  width: 50%;
}
.pop_btn_box >view:first-child{
  background: #FFDAB9;
  color: #fff;
}

.pop_btn_box >view:nth-child(2){
  background: #FFFAF0;
  color: #000;
}

